        <CardHeaderAvatar>
            <MudAvatar Image="https://avatars.githubusercontent.com/u/5643178?v=4" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">Dai Nguyen</MudText>
